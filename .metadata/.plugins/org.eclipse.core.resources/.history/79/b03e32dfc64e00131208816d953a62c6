package nif.tictactoe.controllers;

import java.awt.Desktop;
import java.net.URI;

import nif.tictactoe.Context;
import javafx.application.Platform;
import javafx.fxml.FXML;

public class ErrorController {

	private String _error;
	
	@FXML
	private void onSubmitClick() {
		try {
			Desktop.getDesktop().mail(new URI("mailto:gugu@gaga.de?subject=Error in BiddingTicTacToe&body=".concat(Context.getContext().getLastError().getMessage())));
		} catch (Exception e) {
			//If it fails to submit a fail -.-
			Platform.exit();
		}
	}
}